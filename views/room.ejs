<%- include('./partials/header'); %>
  <style>
    #video-grid{
      display: grid;
      grid-template-columns: repeat(auto-fill, 200px);
      grid-auto-rows: 200px;
    }
    video {
      width: 100%;
      height: 100%;
      object-fit: cover;
    }
  </style>
  <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
  <script>
    const this_room_id = "<%= this_room_id %>";
    const this_user_id = "<%= this_user_id %>";
  </script>
<script defer src="https://unpkg.com/peerjs@1.4.5/dist/peerjs.min.js"></script>
  <script src="/socket.io/socket.io.js" defer></script>
  <script src="/js/script.js" defer></script>

    <div class="offcanvas offcanvas-end" data-bs-scroll="true" data-bs-backdrop="false" tabindex="-1" id="offcanvasScrolling" aria-labelledby="offcanvasScrollingLabel">
      <div class="offcanvas-header">
        <h5 class="offcanvas-title" id="offcanvasScrollingLabel">Meet Settings</h5>
        <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
      </div>
      <div class="offcanvas-body">
        <p>Try scrolling the rest of the page to see this option in action.</p>
      </div>
    </div>

  <div id="video-grid">
  </div>

  <div class="fixed-bottom bg-dark text-center py-2">
        <img src="/img/mute.png" id="mute-btn" width="50px" class="mx-3"> 
        <img src="/img/no_video.png" id="video-btn" width="50px" class="mx-3"> 
        <img src="/img/people.png" id="people-btn" data-bs-toggle="offcanvas" data-bs-target="#offcanvasScrolling" aria-controls="offcanvasScrolling" width="50px" class="mx-3"> 
        <img src="/img/hangup.png" id="hangup-btn" width="50px" class="mx-3"> 
  </div>

</div>
<%- include('./partials/footer'); %>
